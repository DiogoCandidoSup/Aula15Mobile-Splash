<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:orientation="vertical"
    android:background="@color/green">

    <TextView
        android:id="@+id/textoSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="App de contabilidade"
        android:textSize="30sp"

        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        />

    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/money"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/edNome"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"

        android:hint="Nome"
        android:inputType="text"
        android:maxLines="1"

        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"

        android:text="Genero:"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/rgGenero"
        android:orientation="horizontal"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/rbMas"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"

            android:text="Masculino" />

        <RadioButton
            android:id="@+id/rbFem"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"

            android:text="Feminino" />

        <RadioButton
            android:id="@+id/rbOut"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Outro" />
    </RadioGroup>

    <EditText
        android:id="@+id/edFilhos"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"

        android:hint="Num. de filhos"
        android:inputType="number"
        android:maxLines="1"

        android:padding="10dp" />

    <EditText
        android:id="@+id/edSalBruto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"

        android:hint="Salario Bruto"
        android:inputType="number"
        android:maxLines="1"

        android:padding="10dp"
        />

    <Button
        android:id="@+id/btCalcular"
        android:layout_width="250dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_marginTop="20dp"

        android:backgroundTint="@color/purple_700"
        android:padding="10dp"

        android:text="Calcular"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/edINSS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"

        android:text="Desconto INSS: -R$ "
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/edIR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"

        android:text="Imposto de renda: -R$ "
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/edVT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"

        android:text="Vale transporte: -R$ "
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/edSF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"

        android:text="Salario familia: +R$ "
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/edSalLiquido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"

        android:text="Salario liquido: R$ "
        android:textSize="20sp"
        />

</LinearLayout>